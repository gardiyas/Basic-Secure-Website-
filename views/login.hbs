        </div>
        {{/if}}
        <form action="/login.html" method="post">

            <label for="email"></label>
            <input id="email" name="email" autocomplete="email" type="email" tabindex="1" placeholder="Mail Address"
                required /><br><br>

            <label for="psw"></label>
            <input id="psw" name="psw" type="password" tabindex="2" placeholder="Password" minlength="6" maxlength="12"
                required /><br><br>

            <div class="buttons">
                <input type="submit" name="Submit" value="Login" tabindex="7" />
                <input type="reset" name="Reset" value="Reset" tabindex="8" />

